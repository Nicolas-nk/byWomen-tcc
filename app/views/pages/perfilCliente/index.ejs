<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#7B2CBF">
  <meta name="apple-mobile-web-app-status-bar-style" content="#7B2CBF">
  <meta name="msapplication-navbutton-color" content="#7B2CBF">
  <meta name="robots" content="noindex, follow">
  <title>By Women - Seu Perfil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="icon" href="/images/logo/logo-aba.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="css/reset.css" />
  <link rel="stylesheet" href="css/global.css">
  <link rel="stylesheet" href="css/menu.css">
  <link rel="stylesheet" href="css/perfil.css">
</head>

<body>
  <header>
    <div class="wallpaper bg-purplegradient container">
      <div class="profile navbar">
        <nav class="header-navbar">
          <div class="header-components">
            <a href="javascript:void(0)" onClick="history.go(-1); return false;"><img
                src="images/icons/header/return.svg" alt=""></a>
          </div>
          <div class="header-components">
            <a href="/configuracao"><img src="images/icons/header/settings.svg" alt=""></a>
          </div>
        </nav>
      </div>
      <div class="profile-image">
        <%if(session.usu_autenticado_foto !==null){%>
          <div class="profile-picture-img mx-auto border-profile-img" id="profile-picture-img"
            style="background-image: url('data:image/jpeg;base64,<%= session.usu_autenticado_foto %>') ;">
            <div class="mask-profile-img"></div>
          </div>
          <%}else{%>
            <img src="images/profile/perfil.png" alt="" class="mx-auto d-block border-profile-img">
            <%}%>
              <h1 class="fonts-1 text-center text-purple-600">
                <%= session.usu_autenticado_nome %>
              </h1>
      </div>
    </div>
  </header>
  <div class="container">
    <section class="slide">
      <input type="radio" id="slide1" class="button-banner" name="slide" checked>
      <input type="radio" id="slide2" class="button-banner" name="slide">
      <input type="radio" id="slide3" class="button-banner" name="slide">
      <div class="banners">
        <div class="banner banner-1">
          <img src="images/banners/ver-colaboradoras.png" alt="">
        </div>
        <div class="banner banner-2">
          <img src="images/banners/trabalhe-conosco.png" alt="">
        </div>
        <div class="banner">
          <img src="images/banners/saber-mais.png" alt="">
        </div>
      </div>
    </section>
    <section class="box-jobs">
      <a href="/todas-categorias" class="d-flex justify-content-between text-purple-600">
        <div class="d-flex align-items-center">
          <img src="images/icons/trabalhos.svg" alt="" class="me-4">
          <p>Consulte os nossos servi√ßos</p>
        </div>
        <img src="images/icons/seta.svg" alt="">
      </a>
      <hr>
      <a href="/crie-perfil-profissional" class="d-flex justify-content-between text-purple-600">
        <div class="d-flex align-items-center">
          <img src="images/icons/parceiras.svg" alt="" class="me-4">
          <p>Torne-se nossa parceira</p>
        </div>
        <img src="images/icons/seta.svg" alt="">
      </a>
      <hr>
    </section>
  </div>
  <div class="fake-menu"></div>
  <%- include("./../../components/menu/index.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"
      integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script>
      let contador = 1;

      setInterval(function () {
        document.getElementById('slide' + contador).checked = true;
        contador++;

        if (contador > 3) {
          contador = 1;
        }
      }, 4000);
    </script>
</body>

</html>