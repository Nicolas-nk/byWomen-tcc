<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="robots" content="index, follow">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#7B2CBF">
  <meta name="apple-mobile-web-app-status-bar-style" content="#7B2CBF">
  <meta name="msapplication-navbutton-color" content="#7B2CBF">
  <title>By Women - Cadastre-se</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="icon" href="<%=baseURL%>images/logo/logo-aba.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="<%=baseURL%>css/reset.css" />
  <link rel="stylesheet" href="<%=baseURL%>css/global.css">
  <link rel="stylesheet" href="<%=baseURL%>css/menu.css">
  <link rel="stylesheet" href="<%=baseURL%>css/login.css" />
</head>

<body>
  <div class="bg-purplegradient-bottom pb-5">
    <div class="container">
      <header class="header-navbar">
        <a href="javascript:void(0)" onClick="history.go(-1); return false;" class="header-components">
          <img src="<%=baseURL%>images/icons/header/return.svg" alt="">
        </a>
      </header>
      <section>
        <div class="logo-extensive">
          <img src="<%=baseURL%>images/logo/logo-extenso.png" alt="">
        </div>
        <div class="box-form">
          <div class="form mx-auto text-white">
            <% 
              var err_nome = {"erro":"","visu":"d-none","msg":""} 
              var err_tel = {"erro":"","visu":"d-none","msg":""} 
              var err_email = {"erro":"","visu":"d-none","msg":""} 
              var err_senha = {"erro":"","visu":"d-none","msg":""} 
              var err_conf_senha = {"erro":"","visu":"d-none","msg":""} 
              var err_termos = {"erro":"","visu":"d-none","msg":""} 
            if(erros) {    
              erros.errors.forEach(function(erro){
                  if (erro.param  == "nome"){ err_nome = {"erro":"erro","visu":"d-block","msg":erro.msg}}  
                  if (erro.param  == "tel"){ err_tel = {"erro":"erro","visu":"d-block","msg":erro.msg}}  
                  if (erro.param  == "email"){ err_email = {"erro":"erro","visu":"d-block","msg":erro.msg}}  
                  if (erro.param  == "senha"){ err_senha = {"erro":"erro","visu":"d-block","msg":erro.msg}}  
                  if (erro.param  == "conf_senha"){ err_conf_senha = {"erro":"erro","visu":"d-block","msg":erro.msg}}  
                  if (erro.param  == "termos"){ err_termos = {"erro":"erro","visu":"d-block","msg":erro.msg}}  
              });
            }; %>
            <form id="myform" action="/auth/cadastre-se" method="POST">
              <div class="title">
                <h1 class="fonts-3 mb-1">Cadastre-se</h1>
              </div>
              <hr>
              <fieldset id="step1">
                <div class="name-cad">
                  <input type="text" placeholder="Nome e sobrenome" name="nome" id="nome" class="form-group" value="<%= valores.nome %>">
                  <span class="mt-1 <%= err_nome.visu %>"><%= err_nome.msg %></span>
                </div>
                <div class="number-tel">
                  <input type="tel" placeholder="Número de telefone" name="tel" id="tel" class="form-group" value="<%= valores.tel %>">
                  <span class="mt-1 <%= err_tel.visu %>"><%= err_tel.msg %></span>
                </div>
                <hr class="mt-4 mx-auto" style="max-width: 100px;">
                <div class="email">
                  <input type="email" placeholder="E-mail" name="email" id="email" value="<%= valores.email %>">
                  <span class="mt-1 <%= err_email.visu %>"><%= err_email.msg %></span>
                </div>
                <div class="password">
                  <input type="password" placeholder="Senha" name="senha" id="senha" value="<%= valores.senha %>">
                  <span class="mt-1 <%= err_senha.visu %>"><%= err_senha.msg %></span>
                </div>
                <div class="password">
                  <input type="password" placeholder="Confirmar senha" name="conf_senha" id="conf_senha" value="<%= valores.conf_senha %>">
                  <span class="mt-1 <%= err_conf_senha.visu %>"><%= err_conf_senha.msg %></span>
                </div>
                <div class="check log-into text-start">
                  <input type="checkbox" name="termos" id="termos">
                  <span>Eu li e concordo com os <a href="">Termos de uso</a> e a <a href="">Politica de privacidade</a></span>
                </div>
                <span class=" mt-3 <%= err_termos.visu %>"><%= err_termos.msg %></span>
                <div class="button">
                  <button type="submit" class="next">Finalizar</button>
                </div>
              </fieldset>
            </form>
          </div>
          <div class="log-into">
            <span>Já tem uma conta? <a href="/login">Entrar</a></span>
          </div>
        </div>
      </section>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.js"></script>
  <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/additional-methods.js"></script>
  <script>
    $(document).ready(function() {
      if ($("#tel").val().length == 15) {
        $("#tel").mask("(00) 00000-0009")
      } else {
        $("#tel").mask("(00) 0000-00009")
      }
    });
  </script>
</body>

</html>