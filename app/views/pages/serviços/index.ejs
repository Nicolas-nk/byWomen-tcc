<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Serviço</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/menu.css">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/servicos.css">
</head>

<body>
    <%- include("./../../components/menu/index.ejs") %>
    <div class="bg-pink">
            <section>
                <div class="profession-pic">
                    <div class="box-transparent mask">
                        <div class="close"> <a href="javascript:void(0)"
                                onClick="history.go(-1); return false;"><span>X</span></a></div>
                    </div>
                </div>
            </section>
            <section class="services">
                <div class="profession">
                    <h1>Montagem</h1>
                </div>
                <div class="">
                    <div class="mx-auto service-details margin">
                        <input type="text" placeholder="Especifique oque você precisa:">
                    </div>
                    <div class="mx-auto service-details">
                        <input type="date" placeholder="Prazo para cumprimento do serviço:">
                    </div>
                    <div class="btn-servicos d-flex justify-content-center">
                        <button>Solicitar serviço</button>
                    </div>
                    <hr>
                    <div class="text">
                        <h1>ESCOLHA SUA PROFISSIONAL<br>DESTAQUE</h1>
                    </div>
                    <div class="test"></div>
                </div>
            </section>
    </div>
    <script>
        const servico = document.getElementsByClassName("profession")[0];
        const topoMain = servico.offsetTop;

        window.onscroll = function () {
            fixarNoTopo();
        }

        function fixarNoTopo() {
            if (window.pageYOffset >= topoMain) {
                servico.classList.add("fixed");
            } else {
                servico.classList.remove("fixed");
            }
        }
    </script>
</body>

</html>